@using System.Security.Claims
@using StudentSystem.Client.Services.AuthServices

@inject IClientAuthService clientAuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">StudentSystem.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <AuthorizeView>
            <Authorized>
                <div class="d-flex justify-content-center mt-5">
                    <MudImage Src="@avatar" Style="width: 120px; height:120px;"></MudImage>
                </div>
                <div class="d-flex justify-content-center mt-2 mb-5">
                    <span style="color:white; font-size:17px; margin-top: 6px; font-weight: 500; text-align: center">  @context.User.Identity.Name</span>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Dashboard</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-subjects" Icon="@Icons.Material.Filled.Subject" IconColor="Color.Info">Subjects</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-books" Icon="@Icons.Material.Filled.Book" IconColor="Color.Info">Books</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-professors" Icon="@Icons.Material.Filled.Person4" IconColor="Color.Info">Professors</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-students" Icon="@Icons.Material.Filled.Person" IconColor="Color.Info">Students</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-users" Icon="@Icons.Material.Filled.People" IconColor="Color.Info">Users</MudNavLink>
        </div>
         <div class="nav-item px-3">
            <MudNavLink Href="/all-enrollment" Icon="@Icons.Material.Outlined.FolderOpen" IconColor="Color.Info">Enrollment</MudNavLink>
        </div>
        <div class="nav-item px-3">
            <MudNavLink Href="/all-library" Icon="@Icons.Material.Outlined.FolderOpen" IconColor="Color.Info">Library</MudNavLink>
        </div>
    </nav>
</div>

@code {
    private string avatar;

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        avatar = await clientAuthService.GetSingleUser();
    }

}
